<%= render 'shared/errors', obj: @category %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for @category do |f| %>
        <div class="form-group row">
            <div class="col-form-label col-sm-2">
                <%= f.label :name %>    
            </div>
            <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 ml-md-auto"><%= f.submit(@category.new_record? ? "Add category" : "Update category name", class: "btn btn-primary") %></div>
            <div class="col-auto mr-auto"><%= link_to "Cancel edit and return to articles list", articles_path, class: "btn btn-secondary", type: "button" %></div>
        </div>       
        <% end %>        
    </div>
</div>
