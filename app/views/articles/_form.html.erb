<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for @article do |f| %>
        <div class="form-group row">
            <div class="col-form-label col-sm-2">
                <%= f.label :title %>    
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-form-label col-sm-2">
                <%= f.label :description %>    
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control", placeholder: "Content of the article", rows: "5" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 ml-md-auto"><%= f.submit "Submit", class: "btn btn-primary" %></div>
            <div class="col-auto mr-auto"><%= link_to "Cancel edit and return to articles list", articles_path, class: "btn btn-secondary", type: "button"%></div>
        </div>       
        <% end %>        
    </div>
</div>
